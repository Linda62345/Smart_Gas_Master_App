<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="21.1dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="204dp"
                android:layout_height="231dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/baseline_person_24" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/greetings"
                    android:textColor="#ff000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/changeable_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:textColor="#ff000000"
                    android:textSize="38sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edit_personal_info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/edit_personal"
                    android:textColor="#ff3272d7"
                    app:cornerRadius="5dp"
                    android:background="@drawable/oval_button"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="170dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/oval_button"
                    android:text="登出"
                    android:textColor="#ff3272d7"
                    app:cornerRadius="14dp" />

            </RelativeLayout>

        </GridLayout>

        <Button
            android:layout_width="328.9dp"
            android:layout_height="142.0dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginStart="38.0dp"
            android:text="@string/today_order"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="#ff3272d7"
            android:textColor="#ffffffff"
            android:id="@+id/orderList_page_button"
            />


        <!--
        <Button
            android:layout_width="328.9dp"
            android:layout_height="142.5dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_marginLeft="38.0dp"
            android:text="@string/open_scanner"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="#ff3272d7"
            android:textColor="#ffffffff"
            android:id="@+id/open_scanner_button"
            android:layout_marginTop="14.3dp"
            />
            -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>