<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterWeightOnly">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gas_empty_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/gas_empty_weight"
            android:textColor="@android:color/black"
            android:textSize="20.0sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/input_gas_empty_weight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffeeeeee"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="@string/input_gas_empty_weight"
            android:layout_marginHorizontal="50dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirmGasEmptyWeightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:layout_weight="@integer/material_motion_duration_medium_1"
            android:backgroundTint="#ff5877e4"
            android:text="@string/confirm_gas_weight_empty"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            android:textStyle="bold" />


    </LinearLayout>

    </LinearLayout>

</ScrollView>