<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GasRegister"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ScanNewQRCode"
        android:background="@color/white">

        <androidx.camera.view.PreviewView
            android:id="@+id/newScanner"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@android:color/white"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/manuallyEnterCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/enterCode"
            android:textColor="@android:color/black"
            android:textSize="20.0sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/mannuallyEnterGasCode"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:background="#ffeeeeee"
                android:gravity="center"
                android:hint="@string/enterCode"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/next_gas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="下一隻"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:backgroundTint="#ff5877e4"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/gas_empty_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/gas_empty_weight"
            android:textColor="@android:color/black"
            android:textSize="20.0sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/input_gas_empty_weight"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:background="#ffeeeeee"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="@string/input_gas_empty_weight"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/newScannerString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newGas"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30.0sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            >

            <TextView
                android:id="@+id/NewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gasIDString"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="20.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changeableNewID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20.0sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瓦斯空桶重  :  "
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="20.0dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/changeableNewVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20.0sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/confirm_NewScan_button"
            android:layout_width="186.3dp"
            android:layout_height="70.9dp"
            android:layout_gravity="center"
            android:backgroundTint="#ff5877e4"
            android:gravity="center"
            android:outlineAmbientShadowColor="#ff080808"
            android:text="@string/confirm_gas_register"
            android:textColor="#ffffffff"
            android:textSize="20.0sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

